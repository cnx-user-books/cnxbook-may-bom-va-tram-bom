              <row>
                <entry>d/D</entry>
                <entry>0,3</entry>
                <entry>0,4</entry>
                <entry>0,5</entry>
                <entry>0,6</entry>
                <entry>0,7</entry>
              </row>
              <row>
                <entry>
                  <m:math>
                    <m:semantics>
                      <m:mrow>
                        <m:mstyle fontsize="12pt">
                          <m:mrow>
                            <m:mi>α</m:mi>
                          </m:mrow>
                        </m:mstyle>
                        <m:mrow/>
                      </m:mrow>
                      <m:annotation encoding="StarMath 5.0"> size 12{α} {}</m:annotation>
