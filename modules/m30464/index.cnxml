            <tbody>
              <row>
                <entry>N ( kW )</entry>
                <entry>2</entry>
                <entry>2.... 5</entry>
                <entry>5... 50</entry>
                <entry>50 ... 100</entry>
                <entry>100</entry>
              </row>
              <row>
                <entry>k</entry>
                <entry>1,7 ... 1,5</entry>
                <entry>1,5 ... 1,3</entry>
                <entry>1,15 ... 1,1</entry>
                <entry>1,08 ... 1,05</entry>
